{
  "name": "aiga",
  "version": "0.1.0",
  "description": "Next-generation micro-frontend framework with adaptive sandbox architecture and tiered isolation",
  "type": "module",
  "main": "./dist/aiga.cjs",
  "module": "./dist/aiga.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/aiga.js",
      "require": "./dist/aiga.cjs"
    },
    "./sw": {
      "types": "./dist/sw.d.ts",
      "import": "./dist/sw.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc --noEmit && vite build",
    "build:sw": "vite build --config vite.sw.config.ts",
    "build:all": "npm run build && npm run build:sw",
    "typecheck": "tsc --noEmit",
    "example": "vite serve examples/basic --config examples/basic/vite.config.ts",
    "lint": "eslint src/",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "micro-frontend",
    "microfrontend",
    "web-component",
    "iframe",
    "sandbox",
    "shadow-dom",
    "service-worker"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22.0.0",
    "eslint": "^9.0.0",
    "typescript": "^5.7.0",
    "vite": "^6.1.0",
    "vite-plugin-dts": "^4.5.0",
    "vitest": "^3.0.0"
  }
}
